<extension>
  <title>Isomorphic Extension</title>
  <label>Isomorphic</label>
  <copyright>Copyright (c) 2011 MindTouch Inc.</copyright>
  <description>Include Isomorphic libraries.</description>

  <requires host="MindTouch Core 9.02" />

  <function>
    <name>isomorphic</name>
    <description>Include Isomorphic libraries.</description>
    <return>
      <html xmlns:eval="http://mindtouch.com/2007/dekiscript">
        <head>
          <script type="text/javascript">
            window.isomorphicDir = <eval:js>'/' .. string.join(uri.parts(self &amp; 'res' &amp; 'isomorphic').path, '/') .. '/'</eval:js>;
            window.isc_useSimpleNames = false;
          </script>
          <script type="text/javascript" src="self:res/isomorphic/system/modules/ISC_Core.js"/>
          <script type="text/javascript" src="self:res/isomorphic/system/modules/ISC_Foundation.js"/>
          <script type="text/javascript" src="self:res/isomorphic/system/modules/ISC_Containers.js"/>
          <script type="text/javascript" src="self:res/isomorphic/system/modules/ISC_Grids.js"/>
          <script type="text/javascript" src="self:res/isomorphic/system/modules/ISC_Forms.js"/>
          <script type="text/javascript" src="self:res/isomorphic/system/modules/ISC_DataBinding.js"/>
          <script type="text/javascript" src="self:res/isomorphic/system/modules/ISC_Calendar.js"/>
          <script type="text/javascript" src="self:res/isomorphic/skins/Simplicity/load_skin.js"/>
          <script type="text/javascript" src="self:res/isomorphic/models/roles.js"/>
          <script type="text/javascript" src="self:res/isomorphic/models/users.js"/>
        </head>
      </html>
    </return>
  </function>
</extension>
